<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_description" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.description</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="payment_term_id" position="after">
                <field name="up_field"/>
            </field>
            <xpath expr="//field[@name='order_line']/form//field[@name='name']" position="after">
                <field name="original_name" groups="base.group_no_one"/>
                <button name="restore_original_name" string="Restore Original Name" type="object" 
                        class="oe_link" groups="base.group_no_one"
                        attrs="{'invisible': [('original_name', '=', False)]}"
                        help="Kembalikan deskripsi ke nilai aslinya sebelum diubah dari invoice"/>
            </xpath>
            
            <!-- Tambahkan tombol pada form sale order -->
            <!-- <button name="action_confirm" position="before">
                <button name="action_sync_all_lines" string="Sync All Names from Invoices" type="object" class="btn-secondary" attrs="{'invisible': [('state', 'in', ['draft', 'sent'])]}"/>
            </button> -->
        </field>
    </record>
</odoo> 