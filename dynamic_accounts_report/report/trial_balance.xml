<odoo>
    <template id="dynamic_accounts_report.trial_balance">
<!--    <t t-call="web.html_container">-->
<!--        <t t-foreach="docs" t-as="doc">-->
            <t t-call="dynamic_accounts_report.trial_balance1" t-lang="request.env.user.lang"/>
<!--        </t>-->
<!--    </t>-->
</template>

    <template id="dynamic_accounts_report.trial_balance1">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="oe_structure"/>
                    <h3 style="text-align:centre;left:50%;"><span t-esc="Filters.get('company_name')"/>: Trial Balance
                    </h3>
                    <div>
                        <div style="text-align:centre;left:50%;" class="row">

                                <div class="col-3" style="">
                                    <strong>Journals:</strong>
                                    <t t-foreach="Filters['journals']" t-as="ps">
                                        <li>
                                            <t t-esc="ps"/>
                                        </li>
                                    </t>
                                </div>

                                <div class="col-3">
                                    <strong>Target move:</strong>
                                        <li>
                                            <t t-esc="Filters['target_move']"/>
                                        </li>
                                </div>
                                <div class="col-3" style="">
                                    <strong>Compare Years:</strong>
                                        <li>
                                            <t t-esc="Filters.get('comparison_years', 0)"/>
                                        </li>
                                </div>
                                <div class="col-3" style="">
                                    <strong>Compare Months:</strong>
                                        <li>
                                            <t t-esc="Filters.get('comparison_months', 0)"/>
                                        </li>
                                </div>
                        </div>


                        <br></br>
                        <table class="table table-sm table-reports">
                            <thead>
                                <tr>
                                    <th style="text-align:left;">Code</th>
                                    <th colspan="5">Account</th>
                                    <t t-if="Filters.get('date_from')">
                                        <th class="mon_fld">Initial Debit</th>
                                        <th class="mon_fld">Initial Credit</th>

                                    </t>
                                    <!-- Prior Years Comparison Columns -->
                                    <t t-if="Filters.get('comparison_years') and Filters.get('comparison_years') > 0">
                                        <t t-set="year_labels" t-value="comparison_year_labels"/>
                                        <t t-foreach="enumerate(year_labels)" t-as="yl">
                                            <t t-set="idx" t-value="yl[0] + 1"/>
                                            <t t-set="year_label" t-value="yl[1]"/>

                                            <th class="text-right">Debit <t t-esc="year_label"/></th>
                                            <th class="text-right">Credit <t t-esc="year_label"/></th>
                                        </t>
                                    </t>
                                    <!-- Prior Months Comparison Columns -->
                                    <t t-if="Filters.get('comparison_months') and Filters.get('comparison_months') > 0">
                                        <t t-set="month_labels" t-value="comparison_month_labels or []"/>
                                        <t t-foreach="enumerate(month_labels)" t-as="ml">
                                            <t t-set="idx" t-value="ml[0] + 1"/>
                                            <t t-set="month_label" t-value="ml[1]"/>
                                            <th class="text-right">Debit <t t-esc="month_label"/></th>
                                            <th class="text-right">Credit <t t-esc="month_label"/></th>
                                        </t>
                                    </t>
                                    <th class="text-right">Debit</th>
                                    <th class="text-right">Credit</th>
                                </tr>
                            </thead>
                            <t t-foreach="account_data" t-as="line">

                                    <tr>

                                        <td style="text-align:left;">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-esc="line['code']"/>
                                        </td>
                                        <td colspan="5">
                                            <span style="color: white;" t-esc="'..'"/>
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <t t-if="Filters.get('date_from')">
                                            <t t-if="line['Init_balance']">
												<td class="mon_fld">
													<t t-out="line['Init_balance']['debit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
												</td>
												<td class="mon_fld">
													<t t-out="line['Init_balance']['credit']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
												</td>
											</t>
                                            <t t-else="">

												<td class="mon_fld">
												</td>
												<td class="mon_fld">
												</td>
											</t>

										</t>

                                        <!-- Prior Years Comparison Data -->
                                        <t t-if="Filters.get('comparison_years') and Filters.get('comparison_years') > 0">
                                            <t t-set="year_labels" t-value="comparison_year_labels"/>
                                            <t t-foreach="enumerate(year_labels, start=1)" t-as="yl">
                                                <t t-set="idx" t-value="yl[0]"/>
                                                <td class="text-right">
                                                    <span t-esc="line.get('debit_prev_%d' % idx, 0.0)"
                                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.get('credit_prev_%d' % idx, 0.0)"
                                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                            </t>
                                        </t>
                                        <!-- Prior Months Comparison Data -->
                                        <t t-if="Filters.get('comparison_months') and Filters.get('comparison_months') > 0">
                                            <t t-set="month_cols" t-value="Filters.get('comparison_months')"/>
                                            <t t-foreach="range(1, month_cols + 1)" t-as="month_idx">
                                                <td class="text-right">
                                                    <span t-esc="line.get('debit_month_%d' % month_idx, 0.0)"
                                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="line.get('credit_month_%d' % month_idx, 0.0)"
                                                          t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                                </td>
                                            </t>
                                        </t>

                                        <td class="text-right">
                                            <span t-esc="line['debit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="line['credit']"
                                                  t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </td>
                                    </tr>
                            </t>
                            <td colspan="6" style="border-bottom: 1px solid ;" class="mon_fld"><strong>Total</strong></td>
                            <t t-if="Filters.get('date_from')">
                                <td class="mon_fld" style="border-bottom: 1px solid ;"><strong></strong></td>
                                <td class="mon_fld" style="border-bottom: 1px solid ;"><strong></strong></td>
                            </t>
                            <!-- Prior Years Comparison Totals -->
                            <t t-if="Filters.get('comparison_years') and Filters.get('comparison_years') > 0">
                                <t t-set="year_labels" t-value="comparison_year_labels"/>
                                <t t-foreach="enumerate(year_labels, start=1)" t-as="yl">
                                    <t t-set="idx" t-value="yl[0]"/>
                                    <td class="text-right" style="border-bottom: 1px solid ;">
                                        <strong>
                                            <t t-esc="debit_prev_totals[idx-1] if debit_prev_totals and len(debit_prev_totals) >= idx else 0.0"
                                               t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </strong>
                                    </td>
                                    <td class="text-right" style="border-bottom: 1px solid ;">
                                        <strong>
                                            <t t-esc="credit_prev_totals[idx-1] if credit_prev_totals and len(credit_prev_totals) >= idx else 0.0"
                                               t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </strong>
                                    </td>
                                </t>
                            </t>
                            <!-- Prior Months Comparison Totals -->
                            <t t-if="Filters.get('comparison_months') and Filters.get('comparison_months') > 0">
                                <t t-set="month_cols" t-value="Filters.get('comparison_months')"/>
                                <t t-foreach="range(1, month_cols + 1)" t-as="month_idx">
                                    <td class="text-right" style="border-bottom: 1px solid ;">
                                        <strong>
                                            <t t-esc="debit_month_totals[month_idx - 1] if debit_month_totals and len(debit_month_totals) >= month_idx else 0.0" 
                                               t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </strong>
                                    </td>
                                    <td class="text-right" style="border-bottom: 1px solid ;">
                                        <strong>
                                            <t t-esc="credit_month_totals[month_idx - 1] if credit_month_totals and len(credit_month_totals) >= month_idx else 0.0" 
                                               t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                        </strong>
                                    </td>
                                </t>
                            </t>

							<td class="text-right" style="border-bottom: 1px solid ;"><strong><t t-esc="debit_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>
							<td class="text-right" style="border-bottom: 1px solid;"><strong><t t-esc="credit_total" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/></strong></td>

                        </table>
                    </div>
                    <br></br>
                </div>
            </t>
        </t>
    </template>

    <record id="action_print_trial_balance" model="ir.actions.report">
            <field name="name">Trial Balance</field>
            <field name="model">account.trial.balance</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">dynamic_accounts_report.trial_balance</field>
            <field name="report_file">dynamic_accounts_report.trial_balance</field>
    </record>

</odoo>